# 数据库
POSTGRES_DB_CANDIDATE=fundval
POSTGRES_USER=fundval
POSTGRES_PASSWORD=change_me_in_production

# 应用（backend / frontend）
SECRET_KEY=change_me_in_production_use_random_string
DEBUG=false
ALLOW_REGISTER=false
TZ=Asia/Shanghai

# CORS（可选）
# - 留空：默认不开放跨域（推荐；前端通过 Next.js `/api` 反代访问后端，无需 CORS）
# - "*" ：允许任意 origin（不建议生产）
# - 多个：逗号分隔，例如：http://localhost:3000,https://your.domain
CORS_ALLOW_ORIGINS=

# 生产建议开启：拒绝占位符/过短的 SECRET_KEY
REQUIRE_SECURE_SECRET=false

# 端口映射（如冲突可自行改成其他端口）
# - 前端：http://localhost:${FRONTEND_HOST_PORT}
# - API：http://localhost:${BACKEND_HOST_PORT}
# - Quant：http://localhost:${QUANT_HOST_PORT}
FRONTEND_HOST_PORT=3000
BACKEND_HOST_PORT=8001
QUANT_HOST_PORT=8002
